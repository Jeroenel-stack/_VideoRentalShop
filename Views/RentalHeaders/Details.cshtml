@model _VideoRentalShop.Models.RentalHeader

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Rental Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Model.Customer!.FirstName @Model.Customer.LastName
        </dd>
    </dl>

    <h4>Rented Movies</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Movie Title</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.RentalDetails != null && Model.RentalDetails.Any())
            {
                @foreach (var detail in Model.RentalDetails)
                {
                    <tr>
                        <td>@detail.Movie!.Title</td>
                        <td>@detail.Status</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No movies rented.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.RentalHeaderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

